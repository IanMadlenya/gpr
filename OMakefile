USE_OCAMLFIND = 1
ABORT_ON_DEPENDENCY_ERRORS = true

OCAMLPACKS += unix lacaml gsl

NATIVE_ENABLED = true
OCAMLFLAGS = -annot -g -w A

CLEANCMD = \
  rm -f *.o *.annot mycaml *.cm[ioxa] *.cmxa *.bc *.exe *.opt \
	*.mpbc *.mpexe *.omc *.a *.so *.auto.mli

.PHONY: clean
clean:
	$(CLEANCMD)

OCAMLINCLUDES += $(dir lib)

.SUBDIRS: lib test
