USE_OCAMLFIND = 1
ABORT_ON_DEPENDENCY_ERRORS = true

OCAMLPACKS += unix lacaml gsl threads core

BYTE_ENABLED = true
NATIVE_ENABLED = true
OCAMLFLAGS = -thread -dtypes -g -w A -warn-error A

OCAMLINCLUDES += $(dir lib)

CLEANCMD = \
  rm -f *.[oa] *.annot *.cm[ioxa] *.cmxa *.opt *.omc *.so

.PHONY: clean
clean:
	$(CLEANCMD)

OCAML_SUFFIXES = .cmi .cmo .cmx .o .exe .bc

InstClean() =
  .PHONY: clean
  clean:
	  $(CLEANCMD)

.SUBDIRS: doc lib test app
