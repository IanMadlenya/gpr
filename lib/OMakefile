SOURCES[] =
  block_diag
  utils
  interfaces
  cov_const
  cov_lin_one
  cov_lin_ard
  cov_se_iso
  fitc_gp

section
  OCAMLCFLAGS += -for-pack Gpr
  OCAMLOPTFLAGS += -for-pack Gpr
  $(addsuffixes $(OCAML_SUFFIXES), $(SOURCES)):

OCamlPackage(gpr, $(SOURCES))
OCamlLibrary(gpr, gpr)

LIBINSTALL_FILES = gpr.cmi gpr.cmxa gpr.a

.PHONY: install-findlib
install-findlib: $(LIBINSTALL_FILES)
  ocamlfind remove gpr || true
  ocamlfind install gpr META $(LIBINSTALL_FILES)

.DEFAULT: gpr.cmxa

InstClean()
